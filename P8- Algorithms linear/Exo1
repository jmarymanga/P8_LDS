   ALGORITHM Sum_Of_All_Elements_Which_Are_Present_In_Either_Of_The_Given_Set_1

   VAR
   i, j,som: INTEGER;
   tab1 : ARRAY_OF INTEGER[4];
   tab2 : ARRAY_OF INTEGER[5];
   som := 0;
   present : BOOLEAN := FALSE;  

   BEGIN

      tab1 := {3, 1, 7, 9}; // inserting the elements directly in the array
      tab2 := {2, 4, 1, 9, 3}; // inserting the elements directly in the array

    
      FOR i FROM 0 TO tab1.length-1 STEP 1 DO 
         FOR j FROM 0 TO tab2.length-1 STEP 1 DO 

            IF (tab1[i] = tab2[j]) THEN
               present = TRUE;
               som = som + tab1[i];
               break;
            ELSE
               present = FALSE;
               som = som;
            END_IF

         END_FOR
      END_FOR

      Write(som);

   END